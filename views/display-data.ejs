<!-- same and available for both -->

<%- include('partials/header'); -%>

<!-- make it just display rather than a input form -->
<!-- make it input form for patient logging in for the first time an pop up to this page -->
<!-- give option of editing data at last -->
<!-- disable editing generally -->

<h1>Basic Details</h1>

<form action="/edit-basic-data" method="get">
	<div class="form-group">
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Name</label>
			<div class="col-sm-10">
				<input
					type="text"
					class="form-control"
					name="name"
					id=""
					readonly
					value="<%= foundUser.name %>"
					autocomplete="off"
				/>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Aadhar Number</label>
			<div class="col-sm-10">
				<input
					type="text"
					class="form-control"
					name="aadharNo"
					readonly
					value="<%= foundUser.aadharNo %>"
					id=""
				/>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Date of Birth</label>
			<div class="col-sm-10">
				<input
					type="text"
					class="form-control"
					name="dob"
					readonly
					value="<%= foundUser.dob %>"
					id=""
				/>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Gender</label>
			<div class="col-sm-10">
				<input
					type="text"
					class="form-control"
					name="gender"
					readonly
					value="<%= foundUser.gender %>"
					id=""
				/>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Contact Number</label>
			<div class="col-sm-10">
				<input
					type="number"
					class="form-control"
					name="contactNo"
					readonly
					value="<%= foundUser.contactNumber %>"
					id=""
				/>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Email Address</label>
			<div class="col-sm-10">
				<input
					type="email"
					class="form-control"
					name="email"
					readonly
					value="<%= foundUser.email %>"
					id=""
				/>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Blood Group</label>
			<div class="col-sm-10">
				<input
					type="text"
					class="form-control"
					name="bloodGroup"
					readonly
					value="<%= foundUser.bloodGroup %>"
					id=""
				/>
			</div>
		</div>

		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Height (in cm)</label>
			<div class="col-sm-10">
				<input
					type="number"
					class="form-control"
					name="height"
					readonly
					value="<%= foundUser.height %>"
					id=""
				/>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Weight (in kg)</label>
			<div class="col-sm-10">
				<input
					type="number"
					class="form-control"
					name="weight"
					readonly
					value="<%= foundUser.weight %>"
					id=""
				/>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="">Health Condition</label>
			<div class="col-sm-10">
				<input
					type="text"
					class="form-control"
					name="healthCondition"
					readonly
					value="<%= foundUser.healthCondition %>"
					id=""
				/>
			</div>
		</div>

		<button type="submit" class="btn btn-primary">Edit Data</button>
	</div>
</form>

<%- include('partials/footer'); -%>
